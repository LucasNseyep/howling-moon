  <%= form_with(model: @collection) do |f| %>
  <div class="card px-3 py-3">
    <div class="card-body">

      <div class="mb-5">
        <h3><%= f.label :title, { class: "form-label"} %></h3>
        <h3><%= f.text_field :title, { class: "form-control form-control-lg", placeholder: "New collection" } %></h3>
      </div>

      <div class="mb-5">
        <h3><%= f.label :description, { class: "form-label"} %></h3>
        <h3><%= f.text_area :description, { class: "form-control form-control-lg", size: "60x7", placeholder: "This collection is about..." } %></h3>
      </div>

      <div class="">
        <h3 class="mb-4">Add first thought to start your new collection</h3>

        <%= form_with model: @thought, data: { controller: "button-switch" } do |f| %>
          <div class="card-main">
            <div class="card-body">
              <h3><%= f.text_field :title, class:'form-card-title text-center mb-5', placeholder: 'Title of your card' %></h3>
              <h4><%= f.text_area :content, size: "66x8", class:'form-card-text', placeholder: 'Say it in your own words...' %></h4>
            </div>
          </div>
        <% end %>

        <!--
        <%= simple_form_for(@thought) do |f| %>
          <h4><%= f.input :title, { class: "form-control form-control-lg", size: "60x7" } %></h4>
          <h4><%= f.input :content, { class: "form-control form-control-lg", size: "60x7" } %></h4>
        <% end %>
        -->
      </div>

      <p class="text-start mt-1 mb-4">*Remember: You need to create a first thought card to start your collection</p>
      <%= link_to 'Cancel', collections_path, class: 'button' %>
      <%= f.submit "Save", class: "button" %>

    </div>
  </div>
  <% end %>

