<div class="container show-header-container">
  <div class="show-left-container">
    <% if @collection.title %>
    <h1><%= @collection.title  %> Collection</h1>
    <% else %>
      <h1>Untitled Collection</h1>
    <% end %>
  </div>

  <div class="show-right-container align-self-center">
    <%= link_to "Edit collection", edit_collection_path(@collection), class: 'button' %>
    <%= link_to "Delete", collection_path(@collection), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'button' %>
  </div>
</div>

<div id="tree-data"
  data-controller="tree-map"
  data-tree-map-data-value="<%= @stringified_data %>">
  </div>

  <div id="col-tree-map" style="text-align: center;" >
</div>
