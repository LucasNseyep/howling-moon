<h1>Collection <%= @collection.id  %>:</h1>

<h3><%= @collection.title %></h3>
<br>
<%= if @thoughts != nil %>
  <% @thoughts.each do |thought| %>
    <ul><h4><%= thought.title %></h4>
    <%= thought.content %></ul>
  <% end %>
<% end %>
<br>
<%= link_to "edit collection title and description", edit_collection_path(@collection) %>
