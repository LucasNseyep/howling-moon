<div data-controller="search-browse">
  <div class="page-container">
    <div class="container">
      <h1>Browse thoughts to connect to: <%= @thought.title %></h1>
      <h1>Thoughts:</h1>
    </div>
    <br>
    <section class="title-search-container container">

    <div class="search-bar">
      <%= form_with url: browse_thoughts_path(@thought), method: :get, html: {class:
        "w-100", data: {search_browse_target: "browseForm"}} do |f| %>
        <%= f.text_field :query,
                        class: "form-control",
                        placeholder: "Search thoughts",
                        value: params[:query],
                        data: {search_browse_target: "browseInput",
                        action: "keyup->search-browse#update"} %>
      <% end %>
    <div>
    </section>

    <%= render "list-browse" %>

  </div>
</div>
