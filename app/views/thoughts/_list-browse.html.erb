<div class="container" data-search-browse-target="browseList">
      <div class="row gy-3">
        <% @thoughts.each do |thought| %>
          <% if !thought.is_connected?(@thought.id) %>
            <div class="col-3 d-flex justify-content-center mb-3">
            <%# why was this ever content rather than title? could be both? %>
              <%= button_to thought.title[0,120], connect_thought_path(thought, selected_id: @thought.id), class: "small-card", method: :post %>
            </div>
          <% else %>
            <div class="col-3 d-flex justify-content-center mb-3">
              <%= button_to thought.title[0,120], disconnect_thought_path(thought, selected_id: @thought.id), class: "small-card-parent", method: :post %>
            </div>
          <% end %>
        <% end %>
      </div>
</div>
